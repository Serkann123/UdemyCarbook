@model List<ResultBrandDto>

@{
    ViewData["Title"] = "Marka";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Marka Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Araba ile yeni özellikler ekleme,(klima,bluetooth,Audio,Elektrik vs.) özellikler
                            listesi, özellikler üzerinden düzenleme ve bir özelliği kaldırma işlemini birazdan
                            gerçekleştirebilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Özellik</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;

                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.Name</td>
                                            <td>
                                                <a asp-area="Admin" asp-controller="AdminBrand" 
                                                asp-action="RemoveBrand" asp-route-id="@item.BrandId"
                                                class="btn btn-outline-danger">Sil</a>
                                            </td>
                                            <td>
                                                <a asp-area="Admin" asp-controller="AdminBrand"
                                                asp-action="UpdateBrand" asp-route-id="@item.BrandId" 
                                                class="btn btn-outline-success">Güncelle</a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                            <a asp-area="Admin" asp-controller="AdminBrand" asp-action="CreateBrand" class="btn btn-outline-primary">Yeni Marka Girişi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

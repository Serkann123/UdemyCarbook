@model CreateServiceDto

@{
    ViewData["Title"] = "Yeni Hizmet";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <div>
                                <h4 class="card-title mb-1">Yeni Hizmet Ekle</h4>
                                <p class="card-subtitle text-muted mb-0">
                                    Bu sayfada hizmet başlığı, açıklaması ve ikon bilgilerini girerek yeni bir 
                                    hizmet ekleyebilirsiniz.
                                </p>
                            </div>

                            <a asp-area="Admin"
                               asp-controller="AdminService"
                               asp-action="Index"
                               class="btn btn-outline-secondary btn-sm">
                                Listeye Dön
                            </a>
                        </div>

                        <form method="post" class="mt-4">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="mb-3">
                                <label asp-for="Title" class="form-label">Hizmet Başlığı</label>
                                <input asp-for="Title"
                                       class="form-control"
                                       placeholder="Örn: 7/24 Destek" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Description" class="form-label">Hizmet Açıklaması</label>
                                <textarea asp-for="Description"
                                          class="form-control"
                                          rows="3"
                                          placeholder="Örn: Müşteri destek ekibimiz 7/24 hizmet verir."></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="IconUrl" class="form-label">Icon URL</label>
                                <input asp-for="IconUrl"
                                       class="form-control"
                                       placeholder="Örn: /assets/icons/support.svg veya https://..." />
                                <div class="form-text">
                                    Icon yolu dosya yolu veya tam URL olabilir. (Örn: <code>/assets/icons/support.svg</code>)
                                </div>
                                <span asp-validation-for="IconUrl" class="text-danger"></span>
                            </div>

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary waves-effect waves-light">
                                    Kaydet
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}

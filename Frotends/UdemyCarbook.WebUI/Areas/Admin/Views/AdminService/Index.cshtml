@model List<ResultServiceDto>

@{
    ViewData["Title"] = "Hizmet";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Hizmetler</h4>
                        <p class="card-subtitle mb-4">
                            Ana sayfa ve hizmetler bölümünde gösterilen hizmet listesini buradan görüntüleyebilir,
                            silebilir ve güncelleyebilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Başlık</th>
                                        <th>Açıklama</th>
                                        <th>Icon-Url</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.Title</td>
                                            <td>@item.Description</td>
                                            <td>@item.IconUrl</td>
                                            <td>
                                                <a asp-area="Admin" asp-controller="AdminService" asp-action="RemoveService" asp-route-id="@item.ServiceId"
                                                   class="btn btn-outline-danger">Sil</a>

                                                </td>
                                            <td>
                                                <a asp-area="Admin" asp-controller="AdminService" asp-action="UpdateService" asp-route-id="@item.ServiceId"
                                                   class="btn btn-outline-danger">Güncelle</a>

                                                </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                            <a asp-area="Admin" asp-controller="AdminService" asp-action="CreateService" class="btn btn-outline-primary">
                                Yeni Hizmet Ekle
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@model List<ResultCommentDto>

@{
    ViewData["Title"] = "Yorum";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yorum Listesi - BlogId: @ViewBag.v</h4>
                        <p class="card-subtitle mb-4">
                            Bloglar ile yapılmış olan yorum listesini bu sayfada göreblirsiniz.
                            İlgili yorumları kaldırabilir yada tekrar aktif hale getirebilrisiniz.
                            Bunun için yorumların altında bulunan butonları kullanablirsiniz.
                        </p>
                        @foreach (var item in Model)
                        {
                            count++;
                            <div class="col-md-12">
                                <div class="card">
                                    <h5 class="card-header">Yorum- @count</h5>
                                    <div class="card-body">
                                        <h4 class="card-title">@item.Name</h4>
                                        <p class="card-text">
                                            @item.Description
                                        </p>
                                        <a href="#" class="btn btn-primary waves-effect waves-light">Yorumu Kaldır</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

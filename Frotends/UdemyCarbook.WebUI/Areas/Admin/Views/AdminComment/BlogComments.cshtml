@model List<ResultCommentDto>

@{
    ViewData["Title"] = "Yorum";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yorumlar</h4>
                        <p class="card-subtitle mb-4">
                            Bloglara yapılan yorumları buradan görüntüleyebilir ve silebilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>#</th>
                                        <th>Ad</th>
                                        <th>Email</th>
                                        <th>Açıklama</th>
                                        <th style="width:120px;">Blog Id</th>
                                        <th style="width:160px;">Tarih</th>
                                        <th style="width:120px;">Sil</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>

                                            <td>@item.CommentId</td>
                                            <td>@item.Name</td>
                                            <td>@item.Email</td>
                                            <td>@item.Description</td>
                                            <td>@item.BlogId</td>

                                            <td>
                                                @(item.CreateDate.ToString("dd.MM.yyyy"))
                                            </td>

                                            <td>
                                                <a asp-area="Admin" asp-controller="AdminComment" asp-action="RemoveComment" asp-route-id="@item.CommentId"
                                                   class="btn btn-outline-danger btn-sm">
                                                    Sil
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

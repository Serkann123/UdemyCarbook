@model List<ResultPricingDto>

@{
    ViewData["Title"] = "Fiyat";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Ödeme Türleri Sayfası</h4>
                        <p class="card-subtitle mb-4">
                            Ana sayfanın Ödeme Türleri sayfasında bulunan bilgileri asağıdan düzenleyeblirsiniz.
                            Tema bütünlüğünün bozulmaması amacıyla lütfen 1 tane veri girişi yapınız.
                            Aksi halde tema bütünlüğü bozulacaktır.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Ödeme Türü</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.Name</td>
                                            <td><a href="/Admin/AdminPrincing/RemovePrincing/@item.PricingId" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/Admin/AdminPrincing/UpdatePrincing/@item.PricingId" class="btn btn-outline-success">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                             <a href="/Admin/AdminPrincing/CreatePrincing" class="btn btn-outline-primary">Yeni Princing Girişi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@model UpdatePrincingDto

@{
    ViewData["Title"] = "UpdatePrincing";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yeni Ödeme Türü Periyodu Girişi </h4>
                        <p class="card-subtitle mb-4">
                            Ödeme Türü Periyoduna veri girşini asağıdan yapabilirsiniz.
                        </p>

                        <form method="post">

                            <div class="form-group">
                                <input type="hidden" asp-for="PricingId">
                                <label for="exampleInputName">Ödeme Periuodu Başlığı</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Ödeme Periyot Adını Giriniz(Günlük,Haftalık,Aylık vs.)">
                            </div>

                            <button type="submit" class="btn btn-warning waves-effect waves-light">Ödeme Türünü Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

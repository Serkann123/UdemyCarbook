@model UpdateLocationDto

@{
    ViewData["Title"] = "UpdateLocation";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yeni Lokasyon Güncelleme Alanı </h4>
                        <p class="card-subtitle mb-4">
                            Araçların alındıgı ve teslim edildiği noktalar ait lokasyon
                            bilgisinin girildiği sayfadır.Bilgileri eksiksiz doldurunuz.
                        </p>

                        <form method="post">

                            <div class="form-group">
                                <input type="hidden" asp-for="LocationId"/>

                                <label for="exampleInputName">Lokasyon</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Name" placeholder="Lokasyon Adını Giriniz">
                            </div>

                            <button type="submit" class="btn btn-warning waves-effect waves-light">Lokasyon Bilgisini Güncelleme</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@model UpdateBannerDto

@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yeni Banner Giriş Alanı </h4>
                        <p class="card-subtitle mb-4">
                            Ana sayfanın banner alanında bulunan bilgileri asağıdan düzenleyeblirsiniz.
                            Tema bütünlüğünün bozulmaması amacıyla lütfen 1 tane veri girişi yapınız.
                            Aksi halde tema bütünlüğü bozulacaktır
                        </p>

                        <form method="post">

                            <div class="form-group">
                                <input type="hidden" asp-for="BannerId" />

                                <label for="exampleInputTitle">Başlık</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Başlığı Giriniz">
                            </div>


                            <div class="form-group">
                                <label for="exampleInputDescription">Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Açıklamayı Giriniz">
                            </div>


                            <div class="form-group">
                                <label for="exampleInputVideoDescription">Video Açıkalama</label>
                                <input type="text" class="form-control" id="exampleInputVideoDescription" asp-for="VideoDescription" placeholder="Video Açıklamayı Giriniz">
                            </div>



                            <div class="form-group">
                                <label for="exampleInputVideoUrl">Video Url</label>
                                <input type="text" class="form-control" id="exampleInputVideoUrl" asp-for="VideoUrl" placeholder="Video Url Giriniz">
                            </div>


                            <button type="submit" class="btn btn-success waves-effect waves-light">Banner Bilgisini Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>

        </div>
    </div>

</div>



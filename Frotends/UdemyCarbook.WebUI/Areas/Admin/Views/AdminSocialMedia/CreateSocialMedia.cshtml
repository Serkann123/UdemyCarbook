@model CreateSocialMediaDto

@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yeni Social Media Girişi </h4>
                        <p class="card-subtitle mb-4">
                            Ana sayfa ve hizmetler bölümünde yer alan hizmet listesinin admin tarafındaki
                            işlemlerini asağıdaki bütünlüğü bozmamak için 4 tane veri girişi yapın.
                        </p>

                        <form method="post">

                            <div class="form-group">
                                <label for="exampleInputTitle">Social Media Başlığı</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Name" placeholder="Socail Media Başlığını Giriniz">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputUrl">Social Media Linki</label>
                                <input type="text" class="form-control" id="exampleInputUrl" asp-for="Url" placeholder="Socail Media Url Linkini Giriniz">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputIcon">Hizmet Icon-Url</label>
                                <input type="text" class="form-control" id="exampleInputIcon" asp-for="Icon" placeholder="Sosyal Medya İcon Bilgisini Giriniz">
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Sosyal Medya Bilgisini Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@model UpdateAuthorDto

@{
    ViewData["Title"] = "Yazar Güncelleme";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yazar Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">
                            Ana sayfanın ve Yeni sayfada bulunan bilgileri asağıdan düzenleyeblirsiniz.
                            Tema bütünlüğünün bozulmaması amacıyla lütfen 1 tane veri girişi yapınız.
                            Aksi halde tema bütünlüğü bozulacaktır.

                        <form method="post">

                            <div class="form-group">

                                <input type="hidden" asp-for="AuthorId" />

                                <label for="exampleInputName">Ad Soyad</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Yazar Adını Giriniz">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputDescription">Açıklama</label>
                                <textarea class="form-control" rows="5" asp-for="Description" placeholder="Açıklamayı Giriniz"></textarea>
                            </div>


                            <div class="form-group">
                                <label for="exampleInputImageUrl">Yazar Görsel</label>
                                <input type="text" class="form-control" id="exampleInputImageUrl" asp-for="ImageUrl" placeholder="Yazar Görsel Url Bilgisini Giriniz">
                            </div>


                                <button type="submit" class="btn btn-warning waves-effect waves-light">Yazarı Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



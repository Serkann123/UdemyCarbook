@model List<ResultFeatureDto>

@{
	ViewData["Title"] = "CreateCarFeatureByCar";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Araca Ait Özellikler Ekleme Sayfası</h4>
						<p class="card-subtitle mb-4">
							Araca ait özellik eklemesi yapılabilir, mevcut özellikleri kaldırabilir
							ve ilgili güncellemeleri gerçekleştirebilirsiniz.
						</p>

						<form method="post">

							@for (int i = 0; i < Model.Count; i++)
							{
								<div class="form-check">
									<input type="hidden" asp-for="@Model[i].FeatureId" />
									<input type="hidden" asp-for="@Model[i].Name" />
									<input type="checkbox" class="form-check-input" />
									<label class="form-check-label">@Model[i].Name</label>
								</div>
							}

							<button type="submit" class="btn btn-primary">Özellik Ata</button>
						</form>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>


@model List<ResultCarWithBrandDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Araç Girişi</h4>
                        <p class="card-subtitle mb-4">
                          Araç ile ilgili teknik bilgileri dikkatle doldurmanız önemlidir.
                          Veri girişlerinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Marka</th>
                                        <th>Model</th>
                                        <th>Vites Türü</th>
                                        <th>Km</th>
                                        <th>Sil
                                        <th>Güncelle</th>
                                        <th>Detaylar</th>
                                        <th>Sitede Gör</th>
                                        <th>Fiyat Bilgileri</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;

                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.BrandName</td>
                                            <td>@item.Model</td>
                                            <td>@item.Transmission</td>
                                            <td>@item.Km</td>
                                            <td><a href="/AdminCar/RemoveCar/@item.CarId" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/AdminCar/UpdateCar/@item.CarId" class="btn btn-outline-success">Güncelle</a></td>
                                            <td><a href="/AdminCar/DetailCar/@item.CarId" class="btn btn-outline-dark">Detaylar</td>
                                            <td><a href="/AdminCar/DetailCar/@item.CarId" class="btn btn-outline-warning">Sitede Gör</td>
                                            <td><a href="/AdminCar/DetailCar/@item.CarId" class="btn btn-outline-secondary">Fiyat Bilgileri</td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                            <td><a href="/AdminCar/CreateCar" class="btn btn-outline-primary">Yeni Araç Girişi</a></td>
                        </div>

                    </div>
                </div>

            </div>

        </div>

    </div>
</div>


@model List<ResultReviewByCarIdDto>

<div class="tab-pane fade" id="pills-review" role="tabpanel" aria-labelledby="pills-review-tab">
	<div class="row">
		<div class="col-md-7">
			<h3 class="head">@Model.Count Değerlendirme</h3>
			@foreach (var item in Model)
			{
				<div class="review d-flex">
					<div class="user-img" style="background-image: url(@item.CustomerImage)"></div>
					<div class="desc">
						<h4>
							<span class="text-left">@item.CustomerName</span>
							<span class="text-right">@(((DateTime)item.ReviewDate).ToString("dd-MMM-yyyy"))</span>
						</h4>
						<p class="star">
							<span>

								@if (item.RaytingValue == 1)
								{
									<i class="ion-ios-star"></i>
								}

								@if (item.RaytingValue == 2)
								{
									<i class="ion-ios-star"></i>
									<i class="ion-ios-star"></i>
								}

								@if (item.RaytingValue == 3)
								{
									<i class="ion-ios-star"></i>
									<i class="ion-ios-star"></i>
									<i class="ion-ios-star"></i>
								}

								@if (item.RaytingValue == 4)
								{
									<i class="ion-ios-star"></i>
									<i class="ion-ios-star"></i>
									<i class="ion-ios-star"></i>
									<i class="ion-ios-star"></i>
								}

								@if (item.RaytingValue == 5)
								{
									<i class="ion-ios-star"></i>
									<i class="ion-ios-star"></i>
									<i class="ion-ios-star"></i>
									<i class="ion-ios-star"></i>
									<i class="ion-ios-star"></i>
								}

							</span>
							<span class="text-right"><a href="#" class="reply"><i class="icon-reply"></i></a></span>
						</p>
						<p>@item.Comment</p>
					</div>
				</div>
			}
		</div>
		<div class="col-md-5">
			<div class="rating-wrap">
				<h3 class="head">Değerlendirme Sonuçları</h3>
				<div class="wrap">
					<p class="star">
						<span>
							<i class="ion-ios-star"></i>
							<i class="ion-ios-star"></i>
							<i class="ion-ios-star"></i>
							<i class="ion-ios-star"></i>
							<i class="ion-ios-star"></i>
							(@ViewBag.fiveStar%)
						</span>
						<span>@ViewBag.five Yorum</span>
					</p>
					<p class="star">
						<span>
							<i class="ion-ios-star"></i>
							<i class="ion-ios-star"></i>
							<i class="ion-ios-star"></i>
							<i class="ion-ios-star"></i>
							(@ViewBag.fourStar%)
						</span>
						<span>@ViewBag.four Yorum</span>
					</p>
					<p class="star">
						<span>
							<i class="ion-ios-star"></i>
							<i class="ion-ios-star"></i>
							<i class="ion-ios-star"></i>
							(@ViewBag.threeStar%)
						</span>
						<span>@ViewBag.three Yorum</span>
					</p>
					<p class="star">
						<span>
							<i class="ion-ios-star"></i>
							<i class="ion-ios-star"></i>
							(@ViewBag.twoStar%)
						</span>
						<span>@ViewBag.two Yorum</span>
					</p>
					<p class="star">
						<span>
							<i class="ion-ios-star"></i>
							(@ViewBag.oneStar%)
						</span>
						<span>@ViewBag.one Yorum</span>
					</p>
				</div>
			</div>
		</div>
	</div>
</div>
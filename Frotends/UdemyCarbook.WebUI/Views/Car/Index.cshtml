@model List<ResultCarPirincingDto>

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="car-wrap rounded ftco-animate">
                        <div class="img rounded d-flex align-items-end"
                             style="background-image:url('@item.CoverImageUrl');"></div>

                        <div class="text p-3">
                            <h2 class="mb-2">@item.ModelName</h2>
                            <div class="d-flex justify-content-between"><span>Günlük</span><strong>₺ @item.DailyAmount</strong></div>
                            <div class="d-flex justify-content-between"><span>Haftalık</span><strong>₺ @item.WeeklyAmount</strong></div>
                            <div class="d-flex justify-content-between"><span>Aylık</span><strong>₺ @item.MonthlyAmount</strong></div>

                            <div class="mt-3 d-flex">
                                <a href="/Reservation/Index/@item.CarId" class="btn btn-primary py-2 mr-1 w-50">Hemen Kirala</a>
                                <a href="/Car/CarDetail/@item.CarId" class="btn btn-secondary py-2 ml-1 w-50">Detaylar</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

@model List<FilterRentACarDto>

@{
    ViewData["Title"] = "Araç Kiralama Listesi";
}

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">

            @if (Model == null || !Model.Any())
            {
                <div class="col-12">
                    <div class="alert alert-warning text-center">
                        Seçtiğiniz kriterlere uygun araç bulunamadı.
                    </div>
                </div>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="car-wrap rounded ftco-animate">

                            <div class="img rounded d-flex align-items-end"
                                 style="background-image: url('@item.CoverImageUrl');">
                            </div>

                            <div class="text">
                                <h2 class="mb-0">
                                    <a href="/Car/CarDetail/@item.CarId">
                                        @item.Model
                                    </a>
                                </h2>

                                <div class="d-flex mb-3">
                                    <span class="cat">@item.Brand</span>
                                    <p class="price ml-auto">
                                        @item.Amount ₺ <span>/gün</span>
                                    </p>
                                </div>

                                <p class="d-flex mb-0 d-block">
                                    <a asp-controller="Reservation"
                                       asp-action="Create"
                                       asp-route-CarId="@item.CarId"
                                       asp-route-LocationId="@ViewBag.locationId"
                                       asp-route-PickUp="@ViewBag.pickUp"
                                       asp-route-DropOff="@ViewBag.dropOff"
                                       class="btn btn-primary py-2 mr-1">
                                        Hemen Kirala
                                    </a>

                                    <a asp-controller="Car"
                                       asp-action="CarDetail"
                                       asp-route-CarId="@item.CarId"
                                       class="btn btn-secondary py-2 ml-1">
                                        Detaylar
                                    </a>
                                </p>
                            </div>

                        </div>
                    </div>
                }
            }

        </div>
    </div>
</section>

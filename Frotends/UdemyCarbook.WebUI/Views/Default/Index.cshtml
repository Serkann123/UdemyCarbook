@model UdemyCarbook.Dto.LocationDtos.ResultLocationDto;

@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@await Component.InvokeAsync("_HeaderUILayoutComponentPartial")

<body>

    @await Component.InvokeAsync("_NavbarUILayoutComponentPartial")

    @await Component.InvokeAsync("_DefaultCoverComponentPartial")

    <section class="ftco-section ftco-no-pt bg-light">
        <div class="container">
            <div class="row no-gutters">
                <div class="col-md-12 featured-top">
                    <div class="row no-gutters">
                        <div class="col-md-4 d-flex align-items-center">
                            <form method="post" class="request-form ftco-animate bg-primary p-4">
                                <h2>Şimdi Aracınızı Kiralayın</h2>
                                <div class="form-group">
                                    <label class="label">Alınacak Lokasyon</label>

                                    @Html.DropDownListFor(x => x.LocationId, (IEnumerable<SelectListItem>)ViewBag.v, new { @style = "width: 100%; background-color: cadetblue; color: black; font-weight: 200; font-size: 13px; padding: 5px;outline: none;", name = "locationId" })

                                </div>
                                
                                <div class="form-group">
                                    <label class="label">Alınmak İstenen Tarih</label>
                                    <input type="text" class="form-control" name="book_pick_date" id="book_pick_date_start" placeholder="Date">
                                </div>

                                <div class="form-group">
                                    <label class="label">İade Tarihi</label>
                                    <input type="text" class="form-control" name="book_off_date" id="book_pick_date_end" placeholder="Date">
                                </div>

                                <div class="form-group">
                                    <label class="label">Alış Saati</label>
                                    <input type="text" class="form-control" name="time_pick" id="time_pick_start" placeholder="Time">
                                </div>

                                <div class="form-group">
                                    <label class="label">İade Saati</label>
                                    <input type="text" class="form-control" name="time_off" id="time_pick_end" placeholder="Time">
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-secondary py-3 px-4">Araçları Listele</button>

                                </div>
                            </form>
                        </div>

                        <div class="col-md-8 d-flex align-items-center">
                            <div class="services-wrap rounded-right w-100 p-4">
                                <h3 class="heading-section mb-4">Araç Kiralamanın En Basit Yolu</h3>
                                <div class="row d-flex mb-4">
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center">
                                                <span class="flaticon-route"></span>
                                            </div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">Almak İstediğin Konumu Seç</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center">
                                                <span class="flaticon-handshake"></span>
                                            </div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">En Uygun Araçları Gör</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center">
                                                <span class="flaticon-rent"></span>
                                            </div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">Kiralamayı Tamamla</h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <p><a href="#" class="btn btn-primary py-3 px-4">Oluştur</a></p>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>

    @await Component.InvokeAsync("_DefaultLast5CarsWithBrandsComponentPartial")

    @await Component.InvokeAsync("_AboutUsComponentPartial")

    @await Component.InvokeAsync("_ServiceComponentParital")

    @await Component.InvokeAsync("_TestimonialComponentPartial")

    @await Component.InvokeAsync("_BlogLast3WithAuthorListComponentPartial")

    @await Component.InvokeAsync("_DefaultStatisticComponentPartial")

    @await Component.InvokeAsync("_FooterUILayoutComponentPartial")

    @await Component.InvokeAsync("_ScriptUILayoutComponentPartial")

</body>
</html>
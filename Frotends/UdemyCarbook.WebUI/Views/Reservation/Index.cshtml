@model CreateReservationDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="col-md-12 block-9 mb-md-5">
    <form method="post" class="bg-light p-5 contact-form">

        <h3 class="alert alert-success">Araç Rezervayon Formu</h3>
        <br />
        <input type="hidden" asp-for="CarId" value="@ViewBag.v3" class="form-control" placeholder="Almak İstediğiniz Araba" />

        <div class="form-group">
            <label>Adınız</label>
            <input asp-for="Name" type="text" class="form-control" />
        </div>

        <div class="form-group">
            <label>Soyadınız</label>
            <input asp-for="Surname" type="text" class="form-control" />
        </div>

        <div class="form-group">
            <label>Mail Adresiniz</label>
            <input asp-for="Email" type="text" class="form-control" />
        </div>

        <div class="form-group">
            <label>Telefon Numaranız</label>
            <input asp-for="Phone" type="text" class="form-control" />
        </div>

        <div class="form-group">
            <label>Teslim Almak İstediğiniz Lokasyon</label>
            @Html.DropDownListFor(x => x.DropOffLocationId, (List<SelectListItem>)ViewBag.v, new { @style = "width: 100%; background-color: cadetblue; color: black; font-weight: 200; font-size: 13px; padding: 5px; outline: none;" })
        </div>

        <div class="form-group">
            <label>Teslim Etmek İstediğiniz Lokasyon</label>
            @Html.DropDownListFor(x => x.PickUpLocationId, (List<SelectListItem>)ViewBag.v, new { @style = "width: 100%; background-color: cadetblue; color: black; font-weight: 200; font-size: 13px; padding: 5px; outline: none;" })
        </div>

        <div class="form-group">
            <label>Yaşınız</label>
            <input asp-for="Age" type="text" class="form-control" />
        </div>

        <div class="form-group">
            <label>Ehliyet Yılınız</label>
            <input asp-for="DriverLicenseYear" type="text" class="form-control" />
        </div>

        <div class="form-group">
            <textarea asp-for="Description" cols="30" rows="7" class="form-control" placeholder="Varsa Eklemek İstedikleriniz"></textarea>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary py-3 px-5">Rezervasyonu Tamamla</button>
        </div>

    </form>
</div>
@model CreateReservationDto

@{
    ViewData["Title"] = "Rezervasyon";
}

<div class="col-md-12 block-9 mb-md-5">
    <form method="post" class="bg-light p-5 contact-form">

        <h3 class="alert alert-success">Araç Rezervayon Formu</h3>
        <br />
        <input type="hidden" asp-for="CarId" value="@ViewBag.v3" class="form-control" placeholder="Almak İstediğiniz Araba">

        <div class="form-group">
            <input asp-for="Name" type="text" class="form-control" placeholder="Adınız">
        </div>

        <div class="form-group">
            <input asp-for="Surname" type="text" class="form-control" placeholder="Soyadınız">
        </div>

        <div class="form-group">
            <input asp-for="Email" type="text" class="form-control" placeholder="Mail Adresiniz">
        </div>

        <div class="form-group">
            <input asp-for="Phone" type="text" class="form-control" placeholder="Telefon Numaranız">
        </div>

        <div class="form-group">
            <select asp-for="DropOffLocationId" asp-items="ViewBag.v" class="form-control">
                <option value="" disabled selected hidden>Alınacak Lokasyonu Seçin</option>
            </select>
        </div>

        <div class="form-group">
            <select asp-for="PickUpLocationId" asp-items="ViewBag.v" class="form-control">
                <option value="" disabled selected hidden>Teslim Etmek İstediğiniz Lokasyon</option>
            </select>
        </div>

        <div class="form-group">
            <input asp-for="Age" type="text" class="form-control" placeholder="Yaşınız">
        </div>

        <div class="form-group">
            <input asp-for="DriverLicenseYear" type="text" class="form-control" placeholder="Ehliyet Yılınız">
        </div>

        <div class="form-group">
            <textarea asp-for="Description" cols="30" rows="7" class="form-control" placeholder="Varsa Eklemek İstedikleriniz"></textarea>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary py-3 px-5">Rezervasyonu Tamamla</button>
        </div>
    </form>
</div>
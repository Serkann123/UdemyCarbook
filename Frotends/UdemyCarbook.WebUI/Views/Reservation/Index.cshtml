@model CreateReservationDto
@{
    ViewData["Title"] = "Rezervasyon";
    var carIdFromRoute = (int)(ViewBag.v3 ?? 0);
    bool mustPickCar = carIdFromRoute <= 0;
}

<style>
    .form-control-modern {
        background-color: #f8f9fa;
        border: 1px solid #d1d3e2;
        height: 50px;
        border-radius: 8px;
    }

        .form-control-modern:focus {
            background-color: #fff;
            border-color: #007bff;
            box-shadow: none;
        }

    .card-modern {
        border-radius: 15px;
        border: none;
    }

    .section-bg {
        background-color: #f2f2f2;
    }

    label {
        font-weight: 600;
        font-size: 0.9rem;
        color: #495057;
        margin-bottom: 5px;
    }
</style>

<section class="ftco-section section-bg py-5">
    <div class="container">
        <div class="row justify-content-center">

            <div class="col-lg-8 col-md-10">

                <div class="text-center mb-5">
                    <span class="badge badge-primary badge-pill px-3 py-2 mb-3">CarBook Rezervasyon</span>
                    <h2 class="mb-3">Araç Kiralama Formu</h2>
                    <p class="text-muted">Güvenli, hızlı ve kolay bir şekilde aracınızı ayırtın.</p>
                </div>

                <div class="card card-modern shadow-lg">
                    <div class="card-header bg-primary py-2" style="border-radius: 15px 15px 0 0;"></div>

                    <div class="card-body p-4 p-md-5 bg-white" style="border-radius: 0 0 15px 15px;">

                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                            @if (!mustPickCar)
                            {
                                <input type="hidden" asp-for="CarId" value="@carIdFromRoute" />
                            }
                            else
                            {
                                <div class="form-group mb-4 p-3 bg-light rounded border">
                                    <label class="text-uppercase text-muted small" style="letter-spacing: 1px;">KİRALANACAK ARAÇ</label>
                                    <select asp-for="CarId" asp-items="ViewBag.Cars" class="form-control form-control-modern search-dropdown">
                                        <option value=""></option>
                                    </select>
                                    <span asp-validation-for="CarId" class="text-danger small"></span>
                                </div>
                            }

                            <h5 class="mb-3 mt-2 text-dark font-weight-bold">
                                <i class="fa fa-user mr-2 text-primary"></i>Kişisel Bilgiler
                            </h5>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Name">Adınız</label>
                                        <input asp-for="Name" class="form-control form-control-modern" />
                                        <span asp-validation-for="Name" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Surname">Soyadınız</label>
                                        <input asp-for="Surname" class="form-control form-control-modern" />
                                        <span asp-validation-for="Surname" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Email">E-posta Adresi</label>
                                        <input asp-for="Email" type="email" class="form-control form-control-modern" />
                                        <span asp-validation-for="Email" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Phone">Telefon Numarası</label>
                                        <input asp-for="Phone" class="form-control form-control-modern" />
                                        <span asp-validation-for="Phone" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>

                            <hr class="my-4 text-muted opacity-25" />

                            <h5 class="mb-3 text-dark font-weight-bold">
                                <i class="fa fa-car mr-2 text-primary"></i>Sürüş Detayları
                            </h5>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="PickUpLocationId">Alınacak Lokasyon</label>
                                        <select asp-for="PickUpLocationId" asp-items="ViewBag.Locations" class="form-control form-control-modern">
                                            <option value="" selected>Seçiniz...</option>
                                        </select>
                                        <span asp-validation-for="PickUpLocationId" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="DropOffLocationId">Teslim Lokasyonu</label>
                                        <select asp-for="DropOffLocationId" asp-items="ViewBag.Locations" class="form-control form-control-modern">
                                            <option value="" selected>Seçiniz...</option>
                                        </select>
                                        <span asp-validation-for="DropOffLocationId" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Age">Yaşınız</label>
                                        <input asp-for="Age" type="number" class="form-control form-control-modern" placeholder="Yaş" />
                                        <span asp-validation-for="Age" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="DriverLicenseYear">Ehliyet Yılı</label>
                                        <input asp-for="DriverLicenseYear" type="number" class="form-control form-control-modern" placeholder="Yıl" />
                                        <span asp-validation-for="DriverLicenseYear" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="Description">Özel İstekler / Notlar</label>
                                <textarea asp-for="Description" rows="4" class="form-control form-control-modern" style="height: auto;" placeholder="Varsa eklemek istedikleriniz..."></textarea>
                            </div>

                            <div class="mt-4">
                                <button type="submit" class="btn btn-primary btn-block btn-lg py-3 shadow-sm font-weight-bold" style="border-radius: 8px;">
                                    REZERVASYONU ONAYLA
                                </button>
                                <a asp-controller="Default" asp-action="Index" class="btn btn-light btn-block btn-lg py-3 mt-2 text-muted" style="border-radius: 8px;">
                                    Vazgeç
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function() {
            $('.search-dropdown').select2({
                placeholder: "Listeden bir araç seçiniz",
                width: '100%'
            });
        });
    </script>

    <style>
        .select2-results__options {
            max-height: 200px !important;
            overflow-y: auto !important;
        }

        .select2-container .select2-selection--single {
            height: 50px !important;
            display: flex;
            align-items: center;
            border: 1px solid #ced4da;
            border-radius: 8px;
            background-color: #f8f9fa;
        }

        .select2-container--default .select2-selection--single .select2-selection__arrow {
            height: 48px !important;
        }

        .select2-container--default .select2-selection--single .select2-selection__rendered {
            padding-left: 12px;
            color: #495057;
        }
    </style>

    <partial name="_ValidationScriptsPartial" />
}
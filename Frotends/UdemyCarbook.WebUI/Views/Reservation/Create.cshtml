@model CreateReservationDto

@{
    ViewData["Title"] = "Rezervasyon";
    var carIdFromRoute = Model?.CarId ?? 0;
    bool mustPickCar = carIdFromRoute <= 0;
}

<style>
    /* Daha kompakt form elemanları */
    .form-control-sm-custom {
        height: 38px; /* Yüksekliği 50px'den 38px'e düşürdük */
        font-size: 0.9rem;
        border-radius: 6px;
        border: 1px solid #ced4da;
    }

        .form-control-sm-custom:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.15);
        }

    /* Etiketleri küçült ve yaklaştır */
    label {
        font-size: 0.85rem;
        font-weight: 600;
        margin-bottom: 2px;
        color: #555;
    }

    .card-compact {
        border-radius: 10px;
        border: none;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
    }

    .section-compact {
        background-color: #f4f6f9;
        min-height: 100vh;
        padding-top: 2rem;
        padding-bottom: 2rem;
    }

    .form-section-title {
        font-size: 1rem;
        font-weight: 700;
        color: #333;
        border-bottom: 1px solid #eee;
        padding-bottom: 5px;
        margin-bottom: 15px;
        margin-top: 10px;
    }

    .btn-compact {
        font-size: 0.95rem;
        padding: 8px 20px;
        border-radius: 6px;
    }
</style>

<section class="section-compact">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">

                <div class="text-center mb-4">
                    <h4 class="font-weight-bold">Araç Rezervasyon Formu</h4>
                    <p class="text-muted small mb-0">Bilgilerinizi eksiksiz doldurarak işleminizi tamamlayın.</p>
                </div>

                <div class="card card-compact">
                    <div class="card-body p-4">

                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger small p-2 mb-3"></div>

                            @if (!mustPickCar)
                            {
                                <input type="hidden" asp-for="CarId" value="@carIdFromRoute" />
                            }
                            else
                            {
                                <div class="form-group mb-3 bg-light p-2 rounded border">
                                    <label class="d-block text-primary"><i class="fa fa-car mr-1"></i> Kiralanacak Araç</label>
                                    <select asp-for="CarId" asp-items="ViewBag.Cars" class="form-control search-dropdown">
                                        <option value=""></option>
                                    </select>
                                    <span asp-validation-for="CarId" class="text-danger small"></span>
                                </div>
                            }

                            <h6 class="form-section-title text-primary">
                                <i class="fa fa-calendar-alt mr-1"></i> Kiralama Detayları
                            </h6>

                            <div class="form-row">
                                <div class="col-md-6 mb-2">
                                    <label asp-for="PickUpLocationId">Alış Ofisi</label>
                                    <select asp-for="PickUpLocationId" asp-items="ViewBag.Locations" class="form-control form-control-sm-custom">
                                        <option value="" selected>Seçiniz...</option>
                                    </select>
                                    <span asp-validation-for="PickUpLocationId" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6 mb-2">
                                    <label asp-for="PickUpDateTime">Alış Tarihi & Saati</label>
                                    <input asp-for="PickUpDateTime" type="datetime-local" class="form-control form-control-sm-custom"  />
                                    <span asp-validation-for="PickUpDateTime" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="col-md-6 mb-2">
                                    <label asp-for="DropOffLocationId">Teslim Ofisi</label>
                                    <select asp-for="DropOffLocationId" asp-items="ViewBag.Locations" class="form-control form-control-sm-custom">
                                        <option value="" selected>Seçiniz...</option>
                                    </select>
                                    <span asp-validation-for="DropOffLocationId" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6 mb-2">
                                    <label asp-for="DropOffDateTime">Teslim Tarihi & Saati</label>
                                    <input asp-for="DropOffDateTime" type="datetime-local" class="form-control form-control-sm-custom"  />
                                    <span asp-validation-for="DropOffDateTime" class="text-danger small"></span>
                                </div>
                            </div>

                            <h6 class="form-section-title text-primary mt-3">
                                <i class="fa fa-user-circle mr-1"></i> Sürücü Bilgileri
                            </h6>

                            <div class="form-row">
                                <div class="col-md-6 mb-2">
                                    <label asp-for="Name">Ad</label>
                                    <input asp-for="Name" class="form-control form-control-sm-custom" placeholder="Adınız" />
                                    <span asp-validation-for="Name" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6 mb-2">
                                    <label asp-for="Surname">Soyad</label>
                                    <input asp-for="Surname" class="form-control form-control-sm-custom" placeholder="Soyadınız" />
                                    <span asp-validation-for="Surname" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="col-md-6 mb-2">
                                    <label asp-for="Email">E-Posta</label>
                                    <input asp-for="Email" type="email" class="form-control form-control-sm-custom" placeholder="ornek@mail.com" />
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6 mb-2">
                                    <label asp-for="Phone">Telefon</label>
                                    <input asp-for="Phone" class="form-control form-control-sm-custom" placeholder="05XX XXX XX XX" />
                                    <span asp-validation-for="Phone" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="col-md-6 mb-2">
                                    <label asp-for="Age">Yaş</label>
                                    <input asp-for="Age" type="number" class="form-control form-control-sm-custom" />
                                    <span asp-validation-for="Age" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6 mb-2">
                                    <label asp-for="DriverLicenseYear">Ehliyet Süresi (Yıl)</label>
                                    <input asp-for="DriverLicenseYear" type="number" class="form-control form-control-sm-custom" />
                                    <span asp-validation-for="DriverLicenseYear" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Description">Notlar</label>
                                <textarea asp-for="Description" rows="2" class="form-control form-control-sm-custom" style="height: auto;"></textarea>
                            </div>

                            <div class="row mt-4">
                                <div class="col-6">
                                    <a asp-controller="Default" asp-action="Index" class="btn btn-light btn-block btn-compact border text-muted">Vazgeç</a>
                                </div>
                                <div class="col-6">
                                    <button type="submit" class="btn btn-primary btn-block btn-compact shadow-sm">
                                        <i class="fa fa-check mr-1"></i> Rezervasyonu Tamamla
                                    </button>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function() {
            $('.search-dropdown').select2({
                placeholder: "Araç Seçiniz",
                width: '100%'
            });
        });
    </script>

    <style>
        /* Select2 Uyumlu CSS */
        .select2-container .select2-selection--single {
            height: 38px !important; /* Standart input yüksekliği */
            border: 1px solid #ced4da;
            border-radius: 6px;
        }

        .select2-container--default .select2-selection--single .select2-selection__rendered {
            line-height: 36px !important;
            padding-left: 10px;
        }

        .select2-container--default .select2-selection--single .select2-selection__arrow {
            height: 36px !important;
        }
    </style>

    <partial name="_ValidationScriptsPartial" />
}